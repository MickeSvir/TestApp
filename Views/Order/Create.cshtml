@model TestApp.Models.Order

@{
    Layout = "_Layout";
    ViewData["Title"] = "Создание заказа";
}

   
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h1>Создание заказа</h1>

<div class="row">
    
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
    <input type="button" value="Создать" class="btn btn-primary" onclick="TestingOrder($('#ProviderId').val(),$('#Number').val());"/>
    <input type="submit" id="submitBtn" hidden/>
               
</div>
<hr />

            

            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderId" class="control-label"></label>
                <select asp-for="ProviderId" class ="form-control" asp-items="ViewBag.Providers"></select>
            </div>
           
            <br />
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">К заказам</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
